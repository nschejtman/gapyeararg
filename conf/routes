# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.home()
GET        /programas           controllers.Application.programas()
GET        /alojamiento         controllers.Application.alojamiento()
GET        /tips                controllers.Application.tips()
GET        /contacto            controllers.Application.contacto()
POST       /contacto            controllers.Application.contactoSubmit()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
